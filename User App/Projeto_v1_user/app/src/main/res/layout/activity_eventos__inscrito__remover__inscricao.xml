<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eventos_Inscrito_Remover_Inscricao">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_evento_remover_inscricao"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/mostrar_descricao_remover_eventos"
                android:layout_width="297dp"
                android:layout_height="118dp"
                android:layout_marginTop="21dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/mostrar_total_participantes"
                android:layout_width="297dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="10dp"
                android:textSize="30sp" />

            <Button
                android:id="@+id/butao_remove_inscricao"
                android:layout_width="264dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00BCD4"
                android:text="Remover Inscrição" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>