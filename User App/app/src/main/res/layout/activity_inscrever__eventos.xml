<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inscrever_Eventos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-123dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Evento_nome"
                android:layout_width="304dp"
                android:layout_height="62dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/Evento_des"
                android:layout_width="300dp"
                android:layout_height="85dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/Evento_Participantes"
                android:layout_width="233dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/Evento_equipas"
                android:layout_width="231dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/inscritos_eventos"
                android:layout_width="227dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/Evento_Inscrever"
                android:layout_width="277dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00BCD4"
                android:text="Inscrever" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>